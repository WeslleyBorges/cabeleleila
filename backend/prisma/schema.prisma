generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Appointment {
  id       Int      @id @default(autoincrement())
  customer String
  service  Int
  date     DateTime
}

model Service {
  id          Int    @id @default(autoincrement())
  description String
}

model Profile {
  id     Int    @id @default(autoincrement())
  user   User   @relation(fields: [userId], references: [id])
  userId Int    @unique
  name   String
}

model User {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  Profile Profile?
}
